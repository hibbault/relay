{
  "name": "relay",
  "version": "0.1.0",
  "description": "Relay - Your Personal AI IT Assistant",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": [
    "it-support",
    "ai-assistant",
    "computer-diagnostics",
    "tech-support",
    "electron"
  ],
  "author": "İbrahim Yılmaz",
  "license": "Apache-2.0",
  "build": {
    "appId": "com.relay.app",
    "productName": "Relay",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.png",
      "category": "public.app-category.utilities",
      "target": "dmg",
      "hardenedRuntime": false
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Relay"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "ollama": "^0.5.0",
    "pdf-lib": "^1.17.1",
    "systeminformation": "^5.21.0"
  }
}
